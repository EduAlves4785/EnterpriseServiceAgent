unit ESA.MainForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ComCtrls, Vcl.ExtCtrls, AppConfig;

type
  TMainForm = class(TForm)
    Label1: TLabel;
    txtRotaApi: TEdit;
    lstChamados: TListView;
    Label2: TLabel;
    panelConfig: TPanel;
    Button1: TButton;
    Label3: TLabel;
    txtStatus: TLabel;
    procedure txtRotaApiChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  MainForm: TMainForm;
  Cfg: TApiConfig;

implementation


{$R *.dfm}

procedure TMainForm.txtRotaApiChange(Sender: TObject);
begin
  txtRotaApi.Text:=Cfg.ApiRoute;
end;

end.
